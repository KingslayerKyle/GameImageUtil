<Window x:Class="CoDImageUtil.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoDImageUtil"
        mc:Ignorable="d"
        Title="CoDImageUtil | Working" 
        Height="235" 
        Width="571"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Closing="WindowClosing">
    <Grid Background="#FF21252B">
        <!-- Console Box -->
        <Button x:Name="TaskButton" Content="Cancel" Click="TaskButtonClick"  HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="136" Height="32"/>
        <ProgressBar x:Name="Progress" Margin="10,84,10,0" Height="55" VerticalAlignment="Top"/>
        <Label x:Name="ProgressMessage" Content="Working" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="10,10,10,0" Height="69" VerticalAlignment="Top" Foreground="White" FontSize="24"/>
    </Grid>
</Window>
